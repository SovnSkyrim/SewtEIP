<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:GetStartedApp.ViewModels"
        x:Class="GetStartedApp.Views.MainWindow"
        Title="GetStartedApp"
        Icon="/Assets/avalonia-logo.ico">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Button row -->
            <RowDefinition Height="*"/> <!-- Image area -->
        </Grid.RowDefinitions>

        <!-- Button to select an image, in the first row -->
        <Button HorizontalAlignment="Center" Name="PictureSelection" Click="PictureSelectionFunction" 
                Grid.Row="0">
            Select an image!
        </Button>
        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"
                      Name="ImageScrollViewer" PointerWheelChanged="OnPointerWheelChangedMethod"
                      Grid.Row="1">
            <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                <Image Name="SelectedImage" Margin="20" Stretch="None" 
                       PointerPressed="OnPointerPressed" />
            </Grid>
        </ScrollViewer>
    </Grid>
</Window>
