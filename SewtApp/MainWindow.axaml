<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="SewtApp.MainWindow"
        Title="SewtApp">
  
    <DockPanel>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Background="#333">
            <Button x:Name="OpenButton" Content="Ouvrir" Margin="5"/>
            <Button x:Name="SaveButton" Content="Sauvegarder" Margin="5"/>
            <Button x:Name="ExportButton" Content="Exporter" Margin="5"/>
        </StackPanel>

        <Grid DockPanel.Dock="Top" RowDefinitions="Auto,*">
            <!-- ScrollViewer for zoom, panning, and rotation -->
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"
                          Name="ImageScrollViewer" PointerWheelChanged="OnPointerWheelChanged"
                          Grid.Row="1">
                <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Image x:Name="DisplayedImage" Stretch="None" PointerPressed="OnPointerPressed" />
                </Grid>
            </ScrollViewer>
        </Grid>
    
    </DockPanel>
</Window>